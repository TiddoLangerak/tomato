{
  "name": "@tomato/tomato",
  "version": "0.3.1",
  "description": "Unit test framework using cucumber-style tests",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "repository": "github:TiddoLangerak/tomato",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "find src/*.test.ts | NODE_OPTIONS='--loader ts-node/esm' tomato",
    "watch-test": "find src/*.test.ts | NODE_OPTIONS='--loader ts-node/esm --loader @tomato/tomato/loader' tomato -w"
  },
  "bin": {
    "tomato": "./lib/cli.js"
  },
  "exports": {
    ".": "./lib/index.js",
    "./loader": "./loader.mjs"
  },
  "keywords": [],
  "author": "Tiddo Langerak",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@tomato/tomato": "^0.3.1",
    "@types/node": "^18.15.13",
    "pnpm": "^8.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "files": [
    "lib",
    "README.md",
    "package.json",
    "loader.mjs"
  ]
}
